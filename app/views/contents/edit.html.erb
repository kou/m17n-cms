<div id='page-info'>
<h2><%=h @content.page.name %></h2>

<p>
<% if @content.page.published? %>
  Published
<% else %>
  Draft
<% end %>
</p>

<%= link_to 'Edit', edit_page_path(@content.page) %>
</div>

<div id="content-<%= @content.language %>">
<%= link_to 'Show', @content %>
<% form_for(@content) do |f| %>
  <%= f.label :title %>:
  <%= f.text_field :title %>

  <p>
    <%= f.text_area :body %>
  </p>
<% end %>
</div>

