<h1>Listing contents</h1>

<table>
  <tr>
    <th>Page</th>
    <th>Locale</th>
    <th>Title</th>
    <th>Body</th>
    <th>Published</th>
  </tr>

<% for content in @contents %>
  <tr>
    <td><%=h content.page_id %></td>
    <td><%=h content.locale %></td>
    <td><%=h content.title %></td>
    <td><%=h content.body %></td>
    <td><%=h content.published %></td>
    <td><%= link_to 'Show', content %></td>
    <td><%= link_to 'Edit', edit_content_path(content) %></td>
    <td><%= link_to 'Destroy', content, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

