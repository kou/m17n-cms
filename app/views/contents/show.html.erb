<%= render(:partial => "pages/info", :locals => {:page => @content.page}) %>

<%= render(:partial => "preview", :locals => {:content => @content}) %>

<%= javascript_tag("
Ext.onReady(function() {
  content = new Ext.Panel({
    layout: 'border',
    region: 'center',
    items: [page_info,
            {
              region: 'center',
              title: #{@content.language.to_json},
              tbar: [
                {
                  text: 'Edit',
                  handler: function() {
                    document.location = #{edit_content_path(@content).to_json}
                  }
                }
              ],
              contentEl: 'content-#{@content.language}-preview'
            }
           ]
  });
});") %>
