<%= javascript_tag(<<-EOC
var page_info = null;
Ext.onReady(function() {
  page_info = new Ext.Panel({
    region: 'north',
    title: #{h(page.name).to_json},
    split: true,
    tbar: [
      {
        text: #{t('Edit').to_json},
        handler: function() {document.location = #{edit_page_path(page).to_json}}
      },
      "-",
      {
        text: #{t('Admin').to_json},
        handler: function() {
          document.location = #{pages_path.to_json}
        }
      }
    ]
  });
})
EOC
) %>
