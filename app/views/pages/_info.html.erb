<div id='page-info' class='main-content'>
</div>

<%= javascript_tag("
var page_info = null;
Ext.onReady(function() {
  page_info = new Ext.Panel({
    region: 'north',
    title: #{(h(page.name) + ": " + page_published_label(page)).to_json},
    split: true,
    tbar: [
      {
        text: #{t('Edit').to_json},
        handler: function() {document.location = #{edit_page_path(page).to_json}}
      }
    ],
    contentEl: 'page-info'
  });
})
") %>
