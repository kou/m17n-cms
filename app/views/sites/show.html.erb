<div id="site-info" class="main-content">
  <dl>
    <dt><%= t("Title") %></dt>
    <dd><%=h @site.title %></dd>

    <dt><%= t("FTP host") %></dt>
    <dd><%=h @site.ftp_host %></dd>

    <dt><%= t("FTP path") %></dt>
    <dd><%=h @site.ftp_path %></dd>
  </dl>

<% if @site.ftp_host and @site.ftp_path -%>
  <h3><%= t("Upload") %></h3>
  <% @ftp.password = nil -%>
  <% form_for(@ftp,
              :url => upload_site_path(@site),
              :html => {:method => "post"}) do |f| %>
    <p>
      <%= f.label(:user, t("FTP user")) %>
      <%= f.text_field(:user) %>
    </p>
    <p>
      <%= f.label(:password, t("FTP password")) %>
      <%= f.password_field(:password) %>
    </p>

    <p>
      <%= f.submit(t("Upload")) %>
    </p>
  <% end %>
  <div id="ftp-upload-status"><%=h @ftp_upload_status_message %></div>

  <% if @ftp_upload_status_message %>
  <%= javascript_tag(<<-EOC);
var executer = new PeriodicalExecuter(
  function () {
    new Ajax.Updater({
                       success: 'ftp-upload-status'
                     },
                     #{upload_status_site_path(@site).to_json},
                     {
                       asynchronous: true,
                       method: "get",
                       onFailure: function (request) {
                         executer.stop();
                         $('ftp-upload-status').innerHTML = #{t("Finished").to_json};
                       }
                     });
  },
  1);
EOC
%>
  <% end %>
<% end %>
</div>

<%= javascript_tag(<<-EOC
Ext.onReady(function() {
  content = new Ext.Panel({
    title: #{t("Site Information").to_json},
    region: 'center',
    contentEl: 'site-info',
    tbar: [
      {
         text: #{t("Edit").to_json},
         handler: function () {
           document.location = #{edit_site_path(@site).to_json};
         }
      }
    ]
  });
});
EOC
) %>
